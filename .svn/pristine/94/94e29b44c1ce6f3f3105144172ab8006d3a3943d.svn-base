<!-- BEGIN PAGE HEADER-->
<div class="page-bar">
    <h3 class="page-title pull-left"><i class="icon-grid"></i> Loại tài liệu</h3>
    <ul class="page-breadcrumb pull-right hidden-xs">
        <li>
            <a href="#/dashboard">Trang chủ</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a href="#/dictionary/doc_types">Loại tài liệu</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN MAIN CONTENT -->
<div class="row margin-top-10">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-body">
                <div class="btn-group pull-left margin-top-10 margin-bottom-10">
                    <button class="btn btn-default" data-ng-click="vm.newDocumentType()"><i class="fa fa-plus-circle"></i> Thêm mới</button>
                    <button class="btn btn-danger margin-left-10" data-ng-click="vm.deleteDocumentTypes()" data-ng-disabled="vm.selectedDocTypes.length <= 0"><i class="fa fa-trash"></i> Xoá bỏ</button>
                </div>
                <table id="bsTableControl" bs-table-control="vm.bsTableControl"></table>
            </div>
        </div>
    </div>
</div>
<!-- END MAIN CONTENT -->
<!-- BEGIN MAIN JS-->
<script type="text/ng-template" id="edit_document_type_modal.html">
    <div modal-movable>
        <div class="modal-header">
            <button type="button" class="close" ng-click="$dismiss()" aria-hidden="true"></button>
            <h4 class="modal-title" data-ng-if="vm.docType.isNew == true"><i class="icon-plus"></i> Thêm loại tài liệu mới</h4>
            <h4 class="modal-title" data-ng-if="vm.docType.isNew == false"><i class="fa fa-pencil-square-o"></i> Cập nhật loại tài liệu</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-xs-12">
                    <label class="bold">Tên loại tài liệu</label>
                    <input class="form-control" ng-model="vm.docType.name" autofocus />
                </div>
            </div>
            <div class="row margin-top-20">
                <div class="col-xs-12">
                    <div class="md-checkbox">
                        <input type="checkbox" id="chk_active" ng-model="vm.docType.active" class="md-check">
                        <label for="chk_active">
                            <span></span>
                            <span class="check"></span>
                            <span class="box"></span> Được kích hoạt
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" ng-click="$dismiss()" class="btn btn-default" data-dismiss="modal">Huỷ bỏ</button>
            <button type="button" ng-click="$close('yes');" class="btn btn-primary" data-dismiss="modal">Lưu lại</button>
        </div>
    </div>
</script>

<script type="text/ng-template" id="confirm_delete_modal.html">
    <div modal-movable>
        <div class="modal-header">
            <button type="button" class="close" ng-click="$dismiss()" aria-hidden="true"></button>
            <h4 class="modal-title"><i class="icon-question"></i> Xoá bản ghi</h4>
        </div>
        <div class="modal-body">
            <p>Bạn có thực sự muốn xoá bỏ <span ng-cloak>{{vm.selectedDocTypes.length}}</span> bản ghi đã chọn?</p>
        </div>
        <div class="modal-footer">
            <button type="button" ng-click="$dismiss()" class="btn btn-default" data-dismiss="modal">Không</button>
            <button type="button" ng-click="$close('yes')" class="btn btn-primary" data-dismiss="modal">Có</button>
        </div>
    </div>
</script>
<!-- BEGIN MAIN JS -->