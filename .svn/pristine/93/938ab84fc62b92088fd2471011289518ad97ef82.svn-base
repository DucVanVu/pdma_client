<!-- BEGIN PAGE HEADER-->
<div class="page-bar">
    <h3 class="page-title pull-left"><i class="pdma-ext1-icon-pregnancy-2 margin-right-5"></i> Mang thai - Sinh đẻ</h3>
    <ul class="page-breadcrumb pull-right hidden-xs">
        <li>
            <a href="#/opc/patients"><i class="fa fa-th-large"></i> Danh sách</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a href="#/opc/view-patient/{{vm.patient.id}}">{{vm.patient.theCase.person.fullname}}</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a href="#">Mang thai - Sinh đẻ</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN MAIN CONTENT -->
<div class="row margin-top-10">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="tabbable-line">
                            <ul class="nav nav-tabs sticky-panel" hl-sticky="" sticky-class="is-sticky custom-alt">
                                <li class="uppercase">
                                    <a href="#/opc-dashboard" uib-tooltip="Tổng quan"><i class="fa fa-area-chart"></i><span class="hidden-xs" ng-class="{'hidden-sm' : isSiteManager(currentUser) || (vm.selectedEntry && vm.selectedEntry.theCase.person)}"> Tổng quan</span></a>
                                </li>
                                <li class="uppercase">
                                    <a href="#/opc/patients" uib-tooltip="Quản&nbsp;lý bệnh&nbsp;nhân"><i class="fa fa-wheelchair-alt"></i><span class="hidden-xs hidden-sm hidden-md"> Bệnh nhân</span></a>
                                </li>
                                <li class="uppercase" ng-if="isSiteManager(currentUser)">
                                    <a href="#/opc/appointment-cal/edit" uib-tooltip="Khám&nbsp;bệnh&nbsp;-&nbsp;Cấp&nbsp;thuốc"><i class="icon-calendar"></i><span class="hidden-xs"> Lịch khám </span></a>
                                    <!--<span class="tab-new-function"><i class="fa fa-flash"></i> mới</span>-->
                                </li>
                                <li class="uppercase">
                                    <a href="#/opc/report" uib-tooltip="Báo&nbsp;cáo"><i class="fa fa-bar-chart"></i><span class="hidden-xs"> Báo cáo</span></a>
                                </li>
                                <li class="active uppercase">
                                    <a href="#"><i class="icon-pencil"></i> <span class="bold">Mang thai/sinh đẻ:</span> {{vm.patient.theCase.person.fullname}}</a>
                                </li>
                                <li class="uppercase" ng-if="vm.editingEntry">
                                    <a uib-tooltip="Cập&nbsp;nhật&nbsp;hồ&nbsp;sơ" href="#/opc/edit-patient/{{vm.editingEntry.id ? vm.editingEntry.id : 0}}"><i class="icon-pencil"></i> {{vm.editingEntry.theCase.person && vm.editingEntry.theCase.person.fullname ? vm.editingEntry.theCase.person.fullname : 'Bệnh nhân mới'}}</a>
                                </li>
                            </ul>
                            <div class="tab-content summary-panel">
                                <div class="tab-pane active margin-bottom-30">
                                    <div class="info-box-alt"><span class="bold"><i class="im im-icon-Idea-2"></i> Chỉ dẫn:</span> Mục này giúp ghi nhận thông tin các lần mang thai - sinh đẻ của bệnh nhân {{vm.patient.theCase.person.fullname}}.</div>
                                    <div class="opc-toolbar margin-top-10 margin-bottom-10">
                                        <button href="#" data-ng-disabled="vm.orgsWritable.length <= 0 || !isSiteManager(currentUser)" ng-click="vm.openAddPregnancy();" class="btn btn-default no-border" uib-tooltip="Thêm&nbsp;thông&nbsp;tin"><i class="fa fa-plus"></i><span class="hidden-xs">Thêm thông tin mang thai - sinh đẻ</span></button>
                                        <div class="vertical-seperator float-right"></div>
                                        <a href="#/opc/view-patient/{{vm.patient.id}}" uib-tooltip="Quay&nbsp;trở&nbsp;lại" class="btn btn-default no-border"><i class="fa fa-arrow-left"></i> Trở lại</a>
                                    </div>
                                    <div class="dragon custom-table-header-1" drag-on>
                                        <table id="bsTableControl" bs-table-control="vm.bsTableControl"></table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END MAIN CONTENT -->

<script type="text/ng-template" id="edit_entry_modal.html">
    <div modal-movable>
        <div class="modal-header">
            <button type="button" class="close" data-ng-disabled="true" aria-hidden="true"></button>
            <h4 class="modal-title" ng-if="vm.entry.isNew == true"><i class="icon-plus"></i> Thêm thông tin mang thai - sinh đẻ</h4>
            <h4 class="modal-title" ng-if="vm.entry.isNew == false"><i class="icon-pencil"></i> Sửa thông tin mang thai - sinh đẻ</h4>
        </div>
        <div class="modal-body summary-panel">
            <div class="row">
                <div class="col-xs-6 margin-top-10">
                    <div class="md-checkbox">
                        <input type="checkbox" id="chk_pregnant" ng-model="vm.entry.pregnant" class="md-check">
                        <label for="chk_pregnant" class="bold">
                            <span></span>
                            <span class="check"></span>
                            <span class="box"></span> Bệnh nhân có mang thai.
                        </label>
                    </div>
                </div>
                <!--<div class="col-xs-6 margin-top-10">-->
                    <!--<div class="md-checkbox">-->
                        <!--<input type="checkbox" id="chk_attendedAnc" ng-model="vm.entry.attendedAnc" class="md-check">-->
                        <!--<label for="chk_attendedAnc">-->
                            <!--<span></span>-->
                            <!--<span class="check"></span>-->
                            <!--<span class="box"></span> Được chăm sóc tiền sản.-->
                        <!--</label>-->
                    <!--</div>-->
                <!--</div>-->
            </div>
            <div class="row margin-top-20">
                <div class="col-xs-6 form-controller-alt-2">
                    <label>Ngày của kỳ kinh cuối</label>
                    <input id="vm.entry.lastMenstrualPeriod" class="form-control" placeholder="Chọn ngày..."
                           ng-flatpickr
                           fp-opts="vm.datepicker1.dateOpts"
                           fp-on-setup="vm.datepicker1.datePostSetup(fpItem)"
                           ng-model="vm.entry.lastMenstrualPeriod"
                           data-enabletime="false" />
                    <a ng-if="vm.entry.lastMenstrualPeriod" class="clear-picker input-has-label" ng-click="vm.datepicker1.clear()" href="#"><i class="icon-close"></i> <span>xoá</span></a>
                </div>
                <div class="col-xs-6 form-controller-alt-2">
                    <label>Ngày dự sinh</label>
                    <input id="vm.entry.dueDate" class="form-control" placeholder="Chọn ngày..."
                           ng-flatpickr
                           fp-opts="vm.datepicker2.dateOpts"
                           fp-on-setup="vm.datepicker2.datePostSetup(fpItem)"
                           ng-model="vm.entry.dueDate"
                           data-enabletime="false" />
                    <a ng-if="vm.entry.dueDate" class="clear-picker input-has-label" ng-click="vm.datepicker2.clear()" href="#"><i class="icon-close"></i> <span>xoá</span></a>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 margin-top-20">
                    <label class="bold">Tình trạng sinh nở</label>
                    <ui-select id="vm.entry.pregResult" ng-model="vm.entry.pregResult" sortable="true" close-on-select="true" style="width: 100%!important;">
                        <ui-select-match allow-clear="false" placeholder="Xin mời chọn...">{{$select.selected.name}}</ui-select-match>
                        <ui-select-choices repeat="r.id as r in vm.pregnancyResults | filter: {name: $select.search}" position="up">
                            <div class="bold" ng-bind-html="r.name | highlight: $select.search"></div>
                        </ui-select-choices>
                    </ui-select>
                </div>
                <div class="col-xs-6 margin-top-20 form-controller-alt-2" ng-if="vm.entry.pregResult == 'GAVEBIRTH'">
                    <label>Ngày sinh</label>
                    <input id="vm.entry.childDob" class="form-control" placeholder="Chọn ngày..."
                           ng-flatpickr
                           fp-opts="vm.datepicker3.dateOpts"
                           fp-on-setup="vm.datepicker3.datePostSetup(fpItem)"
                           ng-model="vm.entry.childDob"
                           data-enabletime="false" />
                    <a ng-if="vm.entry.childDob" class="clear-picker input-has-label" ng-click="vm.datepicker3.clear()" href="#"><i class="icon-close"></i> <span>xoá</span></a>
                </div>
            </div>
            <div ng-if="vm.entry.pregResult == 'GAVEBIRTH'" class="row">
                <div class="col-xs-6 margin-top-20">
                    <!--<label>Cân nặng của trẻ lúc sinh</label>-->
                    <!--<div class="vl-test-result">-->
                        <!--<input type="number" ng-model="vm.entry.birthWeight" class="form-control" />-->
                        <!--<span>(kg)</span>-->
                    <!--</div>-->
                    <label>Điều trị dự phòng cho con</label>
                    <ui-select ng-model="vm.entry.childProphylaxis" sortable="true" close-on-select="true" style="width: 100%!important;">
                        <ui-select-match allow-clear="false" placeholder="Xin mời chọn...">{{$select.selected.name}}</ui-select-match>
                        <ui-select-choices repeat="r.id as r in vm.prophylaxisOptions | filter: {name: $select.search}" position="up">
                            <div class="bold" ng-bind-html="r.name | highlight: $select.search"></div>
                        </ui-select-choices>
                    </ui-select>
                </div>
                <div class="col-xs-6 margin-top-20">
                    <label>Tình trạng nhiễm của con</label>
                    <ui-select ng-model="vm.entry.childHIVStatus" sortable="true" close-on-select="true" style="width: 100%!important;">
                        <ui-select-match allow-clear="false" placeholder="Xin mời chọn...">{{$select.selected.name}}</ui-select-match>
                        <ui-select-choices repeat="r.id as r in vm.hivStatuses | filter: {name: $select.search}" position="up">
                            <div class="bold" ng-bind-html="r.name | highlight: $select.search"></div>
                        </ui-select-choices>
                    </ui-select>
                </div>
            </div>
            <div ng-if="vm.entry.pregResult == 'GAVEBIRTH' && vm.entry.childHIVStatus == 1" class="row">
                <div class="col-xs-6 margin-top-20 form-controller-alt-2">
                    <label>Ngày chẩn đoán HIV+</label>
                    <input id="vm.entry.childDiagnosedDate" class="form-control" placeholder="Chọn ngày..."
                           ng-flatpickr
                           fp-opts="vm.datepicker4.dateOpts"
                           fp-on-setup="vm.datepicker4.datePostSetup(fpItem)"
                           ng-model="vm.entry.childDiagnosedDate"
                           data-enabletime="false" />
                    <a ng-if="vm.entry.childDiagnosedDate" class="clear-picker input-has-label" ng-click="vm.datepicker4.clear()" href="#"><i class="icon-close"></i> <span>xoá</span></a>
                </div>
                <div class="col-xs-6 margin-top-20 padding-top-30">
                    <div class="md-checkbox">
                        <input type="checkbox" id="chk_childInitiatedOnART" ng-model="vm.entry.childInitiatedOnART" class="md-check">
                        <label for="chk_childInitiatedOnART">
                            <span></span>
                            <span class="check"></span>
                            <span class="box"></span> Đã đưa con vào điều trị ARV.
                        </label>
                    </div>
                </div>
            </div>
            <div ng-if="vm.entry.pregResult == 'GAVEBIRTH' && vm.entry.childInitiatedOnART == 1" class="row">
                <div class="col-xs-12 margin-top-20">
                    <label>Cơ sở điều trị</label>
                    <input class="form-control" data-ng-model="vm.entry.childOpc" />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 margin-top-20">
                    <label>Ghi chú</label>
                    <textarea class="form-control" rows="3" data-ng-model="vm.entry.note"></textarea>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" ng-click="$dismiss()" class="btn btn-default" data-dismiss="modal">Bỏ qua</button>
            <button type="button" ng-click="vm.saveEntry()" class="btn btn-primary" data-dismiss="modal">Lưu lại</button>
        </div>
    </div>
</script>

<script type="text/ng-template" id="delete_entry_modal.html">
    <div modal-movable auto-height="yes">
        <div class="modal-header">
            <button type="button" class="close" ng-click="$dismiss()" aria-hidden="true"></button>
            <h4 class="modal-title">Xoá bản ghi</h4>
        </div>
        <div class="modal-body has-icon">
            <div><i class="icon-exclamation"></i></div>
            <div><span>Bạn có chắc chắn muốn xoá bản ghi đã chọn không?</span></div>
        </div>
        <div class="modal-footer">
            <button type="button" ng-click="$dismiss()" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close margin-right-10"></i>Không</button>
            <button type="button" ng-click="$close('yes')" class="btn btn-danger no-border" data-dismiss="modal"><i class="fa fa-check margin-right-10"></i>Có</button>
        </div>
    </div>
</script>

<div ng-include="'_treatment/views/fragments/_noneditable_alert.html?v=' + settings.versionNumber"></div>